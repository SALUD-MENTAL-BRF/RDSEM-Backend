model NaurodevelopmentActivities {
  id Int @id @default(autoincrement())
  title String

  categoryNaurodevelopment CategoryNaurodevelopment @relation(fields: [categoryNaurodevelopmentId], references: [id])
  categoryNaurodevelopmentId Int

  
}

model CategoryNaurodevelopment {
  id Int @id @default(autoincrement())
  type String

  naurodevelopmentActivities NaurodevelopmentActivities[]
}


model Publication {
  id Int @id @default(autoincrement())
  title String
  content String

  // Relaciones
  user User @relation(fields: [userId], references: [id])
  userId Int
}

model Province {
  id Int @id @default(autoincrement())
  name String

  locality Locality[]
}

model Locality {
  id Int @id @default(autoincrement())
  name String

  province Province @relation(fields: [provinceId], references: [id])
  provinceId Int
  request_patient Request_patient[]
  patient Patient[]
}

model Recommendation {
  id Int @id @default(autoincrement())
  title  String
  description String
}